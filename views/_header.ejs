<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title> Facebook Album Viewer </title>

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="/css/bootstrap-social.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.css">
<link rel="stylesheet" type="text/css" href="/css/style.css">

</head>


<body>
	
	<div class="navbar navbar-default navbar-static-top" role="navigation">
	
		<div class="container">
		
			<div class="navbar-header">
				<a class="navbar-brand" href="/">Facebook Album Viewer</a>
			</div>
		
			<ul class="nav navbar-nav navbar-right">
				<li><a href="/">Home</a></li>
				<% if (currentUser) { %>
				<li>
				<a href="/edit">
				Hello,<% if (currentUser.facebook.isAdmin ) { %> Admin <% } %><%= currentUser.name() %>
				</a>
				</li>
				<li><a href="/logout">Log out</a></li>
				<% } else { %>
				<li><a href="/login">Log in</a></li>
				
				<% } %>
			</ul>

		</div>

	</div>




	<div class="container">
		<% errors.forEach(function(error) { %>
		<div class="alert alert-danger" role="alert">
		<%= error %>
		</div>
		<% }) %>
	
		<% infos.forEach(function(info) { %>
		<div class="alert alert-info" role="alert">
			<%= info %>
		</div>
		<% }) %>